<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Formulário de cadastro de Notícia</title>
		</head>
	<body>

		<h1>Adicionar notícias</h1>
		<br/>
		
		<% validacao %> 

		<% if(validacao) { %>
			<ul>
				<% for(var i=0; i < validacao.length; i++) { %>
					<li>
						<%= validacao[i].msg %>
					</li>
				<% } %>
			</ul>
		<% } %>

		<form action="/noticias/salvar" method="post">
			<label>Título</label>
			<input type="text" id="titulo" name="titulo" value="<%=noticia.titulo%>" placeholder="Titulo da Notícia">
			<br>
			<label>Resumo</label>
			<input type="text" id="resumo" name="resumo" value="<%=noticia.resumo%>" placeholder="Titulo da Notícia">
			<br>
			<label>Nome autor</label>
			<input type="text" id="autor" name="autor" value="<%=noticia.autor%>" placeholder="Titulo da Notícia">
			<br>
			<label>Data dos fatos</label>
			<input type="date" id="data_noticia" name="data_noticia" value="<%=noticia.data_noticia%>" placeholder="Titulo da Notícia">
			<br>
			<label>Noticia</label>
			<textarea name="noticia" id="noticia" cols="30" rows="5"><%=noticia.noticia%></textarea>
			<br>
			<input type="submit" value="Enviar" />
		</form>

	</body>
</html>